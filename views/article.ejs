<%- include('partials/head'); %>
    <title>Red Pers - <%- article[0].title.rendered %></h2></title>
    <link rel="stylesheet" href="/styles/article.css">
  </head>
  <body>
<%- include('partials/header'); %>

<main>
<div class="article-page-container">
  <article class="article-page">
    <div class="article-featured-image-container">
      <img
      class="article-featured-image"
      src="<%= article[0].yoast_head_json.og_image[0].url %>"
      alt="<%= article[0].yoast_head_json.schema['@graph'][2].caption %>"
      width="<%= article[0].yoast_head_json.og_image[0].width %>"
      height="<%= article[0].yoast_head_json.og_image[0].height %>"
      />
    </div>
    <div class="article-category-date-like-container">
      <div class="article-category-date-container">
        <p class="article-category"><%= article[0].categories[0]%></p>
        <p class="article-post-date"><%= article[0].date %></p>
      </div>

      <!-- START LIKE INTERACTION -->
	     <form id="like-form" action="/artikel/<%= article[0].slug %>" method="post">
        <input type="hidden" name="like" value="<%= (like[0] && like[0].shares) || 0 %>">
        <button type="submit" id="like" aria-label="Like deze artikel"><span><svg id="like-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 512 512"><!--!Font Awesome Free 6.5.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path fill="" d="M313.4 32.9c26 5.2 42.9 30.5 37.7 56.5l-2.3 11.4c-5.3 26.7-15.1 52.1-28.8 75.2H464c26.5 0 48 21.5 48 48c0 18.5-10.5 34.6-25.9 42.6C497 275.4 504 288.9 504 304c0 23.4-16.8 42.9-38.9 47.1c4.4 7.3 6.9 15.8 6.9 24.9c0 21.3-13.9 39.4-33.1 45.6c.7 3.3 1.1 6.8 1.1 10.4c0 26.5-21.5 48-48 48H294.5c-19 0-37.5-5.6-53.3-16.1l-38.5-25.7C176 420.4 160 390.4 160 358.3V320 272 247.1c0-29.2 13.3-56.7 36-75l7.4-5.9c26.5-21.2 44.6-51 51.2-84.2l2.3-11.4c5.2-26 30.5-42.9 56.5-37.7zM32 192H96c17.7 0 32 14.3 32 32V448c0 17.7-14.3 32-32 32H32c-17.7 0-32-14.3-32-32V224c0-17.7 14.3-32 32-32z"/></svg><span id="like-count">+<%= (like[0] && like[0].shares) || 0 %></span></span></button>
      </form>
            <!-- END LIKE INTERACTION -->

    </div>
    <div class="article-title-container">
      <h2 class="article-title"><%- article[0].title.rendered %></h2>
    </div>
    <span class="article-excerpt"><%- article[0].excerpt.rendered %></span>
    <div class="article-author-reading-time-container">
    <p class="article-author">Auteur: <strong><%= article[0].author %></strong></p>
    <p class="article-reading-time">Leestijd: <strong><%= article[0].yoast_head_json.twitter_misc["Geschatte leestijd"] %></strong>
    </p>
    </div>
    <div class="article-content"><%- article[0].content.rendered %></div>
  </article>
</div>
</main>

<%- include('partials/footer'); %>
